{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "libs/i18n/languages/**/*",
        "watchAssets": true
      }
    ],
    "deleteOutDir": true,
    "typeCheck": true,
    "builder": {
      "type": "swc",
      "options": {
        "copyFiles": true,
        "quiet": true,
        "sync": true,
        "outDir": "dist",
        "watch": true,
        "swcrcPath": ".swcrc"
      }
    }
  }
}